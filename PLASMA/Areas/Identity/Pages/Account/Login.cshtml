@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<img class="bg_image" src="~/images/backgrounds/bg-1.jpg" alt="Placeholder Image">

<div class="radial_gradient" style="display: flex; justify-content: center; align-items: center;height: 75vh">
    <div style="width: 30%">
        <h1 style="text-align: center; color: white;">@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input style="border-radius: 30px;" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input style="border-radius: 30px;" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label" style="color: white;">
                        <input class="form-check-input" style="color: white;" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div style="height: 60px; margin-bottom: 10px;">
                    <button id="login-submit" type="submit" class="w-100 btn btn-primary" style="border-radius: 30px; height: 100%; border: 0; font-weight: 400; font-size: 1rem;">Log in</button>
                </div>
                <div>
                    <p>
                        <a class="logreg_a" id="forgot-password" style="color: white; text-decoration: none;" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a class="logreg_a" asp-page="./Register" style="color: white; text-decoration: none;" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a class="logreg_a" id="resend-confirmation" style="color: white; text-decoration: none;" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
