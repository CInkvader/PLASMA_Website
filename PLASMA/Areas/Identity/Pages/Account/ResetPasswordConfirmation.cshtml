@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<img class="bg_image" src="~/images/backgrounds/bg-1.jpg" alt="Placeholder Image">

<div class="radial_gradient" style="display: flex; justify-content: center; align-items: center;height: 75vh">
    <div style="width: 30%">
        <h1 style="text-align: center; color: white;">@ViewData["Title"]</h1>
        <p style="text-align: center; color: white;">
            Your password has been reset. Please <a asp-page="./Login">click here to log in</a>.
        </p>
    </div>
</div>

