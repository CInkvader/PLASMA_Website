@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}

<img class="bg_image" src="~/images/backgrounds/bg-1.jpg" alt="Placeholder Image">

<div class="radial_gradient" style="display: flex; justify-content: center; align-items: center;height: 75vh">
    <div style="width: 30%">
        <h1 style="text-align: center; color: white;">@ViewData["Title"]</h1>
        <p style="text-align: center; color: white;">
            Please check your email to reset your password.
        </p>
        <button class="w-100 btn btn-primary"
                style="border-radius: 50px; height: 100%; border: 0; font-weight: 400; font-size: 1rem;"
                onclick="window.location.href='/Identity/Account/Login';">
            Continue
        </button>
    </div>
</div>